<div class="account-form-wrapper">
  <div class="account-form-container">
    <h2>ログイン</h2>

    <%= render "shared/error", obj: @user %>

    <div class="account-form-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class:"label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "submit-btn btn" %>
          <%= link_to "新規登録はこちら", new_user_registration_path %>
        </div>
      <% end %>

      
    </div>
  </div>
</div>
